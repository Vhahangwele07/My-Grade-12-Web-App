<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutComeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.OutComeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersistServlet</servlet-name>
        <servlet-class>za.ac.tut.web.PersistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EndSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllStatsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetAllStatsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStatsByIdServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetStatsByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutComeServlet</servlet-name>
        <url-pattern>/OutComeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersistServlet</servlet-name>
        <url-pattern>/PersistServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServlet</servlet-name>
        <url-pattern>/EndSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllStatsServlet</servlet-name>
        <url-pattern>/GetAllStatsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStatsByIdServlet</servlet-name>
        <url-pattern>/GetStatsByIdServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>Computer_Name</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <security-constraint>
        <display-name>OwnerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>ownerResouces</web-resource-name>
            <description>resources for owner</description>
            <url-pattern>/get_stats.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>enable Authntication</description>
            <role-name>owner</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>playerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>playerResource</web-resource-name>
            <description>rosurces</description>
            <url-pattern>/play_game.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Authentication accessed</description>
            <role-name>player</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/LogIn.jsp</form-login-page>
            <form-error-page>/logIn_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>owner can get stats</description>
        <role-name>owner</role-name>
    </security-role>
    <security-role>
        <description>player can play game</description>
        <role-name>player</role-name>
    </security-role>
</web-app>
